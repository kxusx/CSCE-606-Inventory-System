<h1>Edit Location</h1>

<%= form_with model: @location, local: true do |form| %>
  <div>
    <%= form.label :name %><br>
    <%= form.text_field :name, required: true %>
  </div>

  <div>
    <%= form.submit "Update Location", class: "button" %>
  </div>
<% end %>

<%= link_to "Back to Locations", locations_path, class: "button" %>
