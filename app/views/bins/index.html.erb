<p style="color: green"><%= notice %></p>

<% content_for :title, "Bins" %>

<h1>My Bins</h1>

<% if @bins.any? %>
  <table class="table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Location</th>
        <th>Category</th>
        <th>Picture</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @bins.each do |bin| %>
        <tr>
          <td><%= link_to bin.name, bin_path(bin) %></td>
          <td><%= bin.location.name %></td>
          <td><%= bin.category_name %></td>
          <td>
            <% if bin.bin_picture.attached? %>
              <%= image_tag bin.bin_picture.variant(resize_to_limit: [100, 100]).processed, alt: "Bin Picture", class: "img-thumbnail" %>
            <% else %>
              No Picture
            <% end %>

          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>You have no bins yet.</p>
<% end %>

<%= link_to "Create New Bin", new_bin_path, class: "btn btn-primary" %>
<%= link_to "Back to Dashboard", dashboard_path, class: "btn btn-secondary mt-3" %>
