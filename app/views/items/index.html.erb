<% content_for :title, "Items" %>

<div class="container mt-4">
  <% if notice %>
    <div class="alert alert-success alert-dismissible fade show" role="alert">
      <%= notice %>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  <% end %>

  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="mb-0">My Items</h1>
    <div>
      <%= link_to new_item_path, class: "btn btn-primary" do %>
        <i class="fas fa-plus me-1"></i> New Item
      <% end %>
    </div>
  </div>

  <% if @items.any? %>
    <div class="table-responsive">
      <table class="table table-hover table-striped align-middle">
        <thead class="table-light">
          <tr>
            <th scope="col">Image</th>
            <th scope="col">Name</th>
            <th scope="col">Description</th>
            <th scope="col">Value</th>
            <th scope="col">Bin</th>
            <th scope="col">Created Date</th>
            <th scope="col" style="min-width: 200px;">Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @items.each do |item| %>
            <tr>
              <td style="width: 100px;">
                <% if item.item_pictures.attached? %>
                  <%= image_tag item.item_pictures.first, 
                      class: "img-thumbnail", 
                      style: "width: 80px; height: 80px; object-fit: cover;" %>
                <% else %>
                  <div class="bg-light d-flex align-items-center justify-content-center" 
                       style="width: 80px; height: 80px;">
                    <i class="fas fa-box fa-2x text-muted"></i>
                  </div>
                <% end %>
              </td>
              <td><%= item.name %></td>
              <td><%= truncate(item.description, length: 50) if item.description %></td>
              <td><span class="badge bg-primary"><%= number_to_currency(item.value) %></span></td>
              <td>
                <% if item.bin %>
                  <span class="badge bg-info text-dark">
                    <i class="fas fa-archive me-1"></i>
                    <%= item.bin.name %>
                  </span>
                <% else %>
                  <span class="badge bg-warning text-dark">
                    <i class="fas fa-exclamation-triangle me-1"></i>
                    Unassigned
                  </span>
                <% end %>
              </td>
              <td><%= item.created_date&.strftime("%Y-%m-%d") %></td>
              <td>
  <div class="btn-group" role="group">
    <%= link_to item, class: "btn btn-primary" do %>
      <i class="fas fa-eye me-1"></i> View
    <% end %>
    <%= link_to edit_item_path(item), class: "btn btn-warning" do %>
      <i class="fas fa-edit me-1"></i> Edit
    <% end %>
    <%= button_to item_path(item), 
        method: :delete,
        class: "btn btn-danger",
        form: { class: 'd-inline-block' },
        data: { 
          turbo_confirm: "Are you sure you want to delete this item?",
          turbo_method: :delete
        } do %>
      <i class="fas fa-trash me-1"></i> Delete
    <% end %>
  </div>
</td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% else %>
    <div class="text-center py-5">
      <i class="fas fa-box-open fa-4x text-muted mb-3"></i>
      <h3 class="text-muted">No items yet</h3>
      <p class="text-muted">Start by adding your first item!</p>
      <%= link_to "Add Item", new_item_path, class: "btn btn-primary mt-2" %>
    </div>
  <% end %>

  <div class="mt-4">
    <%= link_to dashboard_path, class: "btn btn-outline-secondary" do %>
      <i class="fas fa-arrow-left"></i> Back to Dashboard
    <% end %>
  </div>
</div>
